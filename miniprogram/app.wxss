/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  box-sizing: border-box;
} 

.divider{
    width: 86%;
    margin: 1vh 1vw 1vh 1vw;
    background-color: var(--mainColor);
    border-radius: 2rpx;
    height: 3rpx;
}

button {
  background: initial;
}

button:focus{
  outline: 0;
}

button::after{
  border: none;
}


page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  --mainColor: #1f343f;
  font-family: '宋体', 'Trebuchet MS', 'Arial';
}